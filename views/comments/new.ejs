<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= campgrounds.name %></h1>
        <div style="width: 50%; margin: 30px auto">
            <form action="/campgrounds/<%= campgrounds._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" placeholder="Type Your Comment here..." required
                        cols="30" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>




<%- include("../partials/footer") %>