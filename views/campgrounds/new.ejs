<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div style="width: 50%; margin: 30px auto">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" name="name" type="text" placeholder="Name of Campground" required>
                </div>
                <div class="form-group">
                    <input class="form-control" name="image" type="text" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <input class="form-control" name="price" type="number" placeholder="Price($)/Night" min="0.01"
                        step="0.01" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="description" placeholder="Description" required cols="30"
                        rows="5"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>




